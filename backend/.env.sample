# Database configuration
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/photos

# AWS S3 credentials (required)
# For local development with MinIO, use u:minioadmin:p:minioadmin
AWS_ACCESS_KEY=minioadmin
AWS_SECRET_KEY=minioadmin

# S3 endpoints (optional, defaults shown)
S3_PUBLIC_URL=http://localhost:9000
S3_ENDPOINT_URL=http://localhost:9000

# CORS configuration (optional)
# Comma-separated list of allowed origins
# If not specified, http://localhost:5173 are allowed by default
CORS_ORIGINS=http://localhost:5173,https://your-production-domain.com